/**
 * PD12: Led
 *
 * PA5->LED
 * PC13 -> Boton de usuario
 */
/*Includes -------------------------------------------------------------------*/
#include "stm32f4xx.h"
/*Defines --------------------------------------------------------------------*/
#define LED   D, 12//PORTD PIN 12
#define RELAY A, 5
/**
 * # -> Concatenar string
 * ##-> concatenar defines
 */
#define CONCACT(a, b)   a ## b
#define PORT(a)			CONCACT(GPIO, a)

/**
 * moder
 */
#define GPIOX_MODER_(a, b, n)  {PORT(a)->MODER &=~ (0x3)<<(2 * b); \
								PORT(a)->MODER |= n<<(2 * b);}
#define GPIOX_MODER(a, m) 		GPIOX_MODER_(a, m)
/**
 * otyper
 */
#define GPIOX_OTYPER_(a, b, n)  {GPIO ## a->OTYPER &=~(1<<b); \
								 GPIO ## a->OTYPER |= n<<b;}
/*Typedefs -------------------------------------------------------------------*/

/*Global variables -----------------------------------------------------------*/

/*Function prototype ---------------------------------------------------------*/



int main(void)
{
	/*enable clock*/
	RCC->AHB1ENR |= RCC_AHB1ENR_GPIODEN;
	GPIOX_MODER(LED, 0x1) //-> (D, 12), 0x1
	GPIOX_MODER(RELAY, 0x1);
    /* Loop forever */
	for(;;);
}

/*Function definition --------------------------------------------------------*/
